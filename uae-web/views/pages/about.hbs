{{> header}}

<section role="banner">
    <div class="aboutside">
        <img src="{{API_URL}}{{data.Banner.url}}" alt="home banner" style="width: 100%" />
    </div>
</section>
<!--banner section-->

<!--about section-->
<section role="about section">
    <div class="_about_section">
        <div class="_max_width">
            <div class="_inner_about wow fadeInUp" data-wow-delay="0.5s">
                <strong>{{data.title}}</strong>
                {{{data.description}}}
                <a href="{{data.link}}" class="modal-toggle">Register Here To Connect With Us</a>
            </div>
        </div>
    </div>
</section>
<!--about section-->

<!--section gallery-->
<section role="gallery section">
    <div class="_gallery_section">
        <div class="_max_width">
            <strong>Gallery</strong>
            <div class="gallery">
                <div class="_first_row">
                    <img src="./images/About_Image_1.png" alt="Image 1" class="two-images wow fadeInUp" data-wow-delay="0.3s" />
                    <img src="./images/About_Image_2.png" alt="Image 2" class="two-images wow fadeInUp" data-wow-delay="0.5s" />
                </div>
                <img src="./images/About_Image_3.png" alt="Image 3" class="one-images wow fadeInUp" data-wow-delay="0.7s" />
                <div class="_first_row">
                    <img src="./images/About_Image_4.png" alt="Image 1" class="two-images wow fadeInUp" data-wow-delay="0.3s" />
                    <img src="./images/About_Image_5.png" alt="Image 2" class="two-images wow fadeInUp" data-wow-delay="0.5s" />
                </div>
            </div>
        </div>
    </div>
</section>
<!--section gallery-->

<!--second section-->
<section role="second section">
    <div class="_second_section about_us_page">
        <div class="_max_width">
            <div class="_inner_second">
                <div class="_right">
                    <div class="_caption wow fadeInUp" data-wow-delay="0.3s">
                        <h3>{{data.agreementHeading}}</h3>
                        <a target="_blank" href="{{data.agreementLink}}">View the Agreement <i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
                    </div>
                    <div class="_caption wow fadeInUp" data-wow-delay="0.3s">
                        <h3>{{data.handbookHeading}}</h3>
                        <a target="_blank" href="{{data.handbookLink}}" target="_blank">View the Handbook <i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--second section-->