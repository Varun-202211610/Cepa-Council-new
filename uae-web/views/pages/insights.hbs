<div class="modal _leader_modal">
    <div class="modal-overlay modal-toggle"></div>
    <div class="modal-wrapper modal-transition">
        <div class="modal-header">
            <span class="modal-close modal-toggle"><i class="fa fa-window-minimize" aria-hidden="true"></i></span>
        </div>

        <div class="modal-body">
            <div class="modal-content popup_insight" id="insightsModal">

            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        let mode = "{{mode}}"
        $('ul.tabs li').removeClass('current');
        if (mode == "CaseStudy") {
            $('ul.tabs li').eq(0).addClass('current');
        } else if (mode == "Video") {
            $('ul.tabs li').eq(1).addClass('current');
        } else {
            $('ul.tabs li').eq(2).addClass('current');
        }
    }); 
</script>
